<Layout title="Zack Roessler">
  <main class="mx-8">
    <div class="md:mx-52">
      <div class="mt-40">
        <h3 class="text-6xl font-medium text-primary/50 mb-6">I am:</h3>
        <h1 class="text-9xl font-medium text-primary mb-9">Zack Roessler,</h1>
        <h6 class="text-3xl font-light text-primary leading-normal xl:mr-96">
          a software developer, with a passion for machine learning and ai
        </h6>
      </div>
      <div class="mt-96">
        <h1 class="text-6xl font-medium text-primary mb-9">Expertise</h1>
        <div class="grid grid-cols-2 gap-x-80 justify-items-end mt-24">
          <div class="relative">
            <div class="h-6 w-5/6 bg-verdigris mb-8"></div>
            <h3 class="text-6xl font-medium text-light absolute -top-9 left-0">
              Front End
            </h3>
            <div>
              <p class="text-3xl text-light">
                Proficient in HTML, CSS, JS, Vue and Astro frameworks
              </p>
            </div>
          </div>
          <div class="relative">
            <div class="h-6 w-3/4 bg-crorange mb-8"></div>
            <h3 class="text-6xl font-medium text-light absolute -top-9 left-0">
              Back End
            </h3>
            <div>
              <p class="text-3xl text-light">
                Skilled in OOP and functional programming in Python, C#, and C++
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-96">
        <div>
          <h1 class="text-6xl font-medium text-primary">Applications</h1>
          <div class="my-16 grid md:grid-cols-2 gap-16">
            <AppCard title="Tower" desc={towerDesc} imgPath="/images/tower.png" link="https://zroes-tower.onrender.com/"/>
            <AppCard title="Grocery Run" desc={groceryDesc} imgPath="/images/grocery-run.png" link="https://grocery-run.onrender.com/"/>
            <AppCard title="Thoughts Cookie" desc={cookieDesc} imgPath="/images/thoughts-cookie.png" link="https://thoughts-cookie.netlify.app/#/"/>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

