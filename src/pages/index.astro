import Layout from "../layouts/Layout.astro";
import AppCard from "../components/AppCard.astro"
const towerDesc = "a website that enables users to organize, administer, and participate in events. users can easily create and join events from the homepage, and manage their events from the account page."
const groceryDesc = "a design concept for a website that allows users to compare prices between different grocery stores. users can create lists and discover which grocery store near them has the best prices for the items on their list"
const cookieDesc = "a simple site for making anonymous blog posts. users can vent their thoughts out for strangers to read, and then randomly browse and comment on the thoughts of other users. "
